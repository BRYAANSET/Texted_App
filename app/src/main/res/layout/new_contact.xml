<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#5852F2">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/back_arrow_createac"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/arrow" />

       </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/photo_contact"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/_424134"/>

            <EditText
                android:id="@+id/add_fullName"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_below="@id/photo_contact"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:hint=" Full Name"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_textinput"
                tools:ignore="TouchTargetSizeCheck"></EditText>
            <ImageView
                android:id="@+id/user_pic"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:layout_below="@id/photo_contact"
                android:layout_marginTop="48dp"
                android:layout_alignRight="@id/add_fullName"
                android:layout_marginRight="240dp"
                android:contentDescription="@string/user_pic"
                app:srcCompat="@drawable/contact" />

            <EditText
                android:id="@+id/add_Phone"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_below="@id/add_fullName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint=" Phone Number"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_textinput"
                tools:ignore="TouchTargetSizeCheck"></EditText>
            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:layout_marginTop="99dp"
                android:layout_below="@id/photo_contact"
                android:layout_alignRight="@id/add_Phone"
                android:layout_marginRight="240dp"
                app:srcCompat="@drawable/call" />
            <Button
                android:id="@+id/button_add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_Phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:backgroundTint="#5852F2"
                android:text="Add Contact"
                android:textColor="#EBEDF2"/>



        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>